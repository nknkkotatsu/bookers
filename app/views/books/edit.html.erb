<h1>Editing Book</h1>

<div class="form">
<%= form_with model:@book, url: update_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <div class="submit"><%= f.submit 'Update Book' %></div>
</div>

<% end %>

  <p>
    <%= link_to "Show",show_path %>
    <span>|</span>
    <%= link_to "Back",index_path %>
  </p>