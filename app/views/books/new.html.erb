<h6 class="notice">
<%= flash[:notice] %>
</h6>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show" , show_path(book.id) %>
        <%= link_to "Edit" , edit_path(book.id) %>
        <%= link_to "Destroy",book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

<div class="form">
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h2>New book</h2>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <div class="submit">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

</div>